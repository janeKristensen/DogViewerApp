<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DogViewer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DogViewer"
    Title="DogViewer"
    WidthRequest="800"
    HeightRequest="800">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" >
        
            <ShellContent
                 Title="Image Generator"
                 ContentTemplate="{DataTemplate local:MainPage}"
                 Route="MainPage" />
            <ShellContent
                Title="Database"
                ContentTemplate="{DataTemplate local:DataBasePage}"
                Route="DataBasePage" />
        <ShellContent
                Title="Top Rated"
                ContentTemplate="{DataTemplate local:TopRatedPage}"
                Route="TopRatedPage" />
    </FlyoutItem>
    
</Shell>
